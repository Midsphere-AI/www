---
import { cn } from '../../utils/merge';
import Button from '../ui/Button.astro';

interface Props {
  class?: string;
}

const { class: className } = Astro.props;

const highlights = [
  { stat: '14', suffix: 'packages', description: 'Modular, install only what you need' },
  { stat: '1', suffix: 'Agent class', description: 'One composable class, no inheritance' },
  { stat: 'MIT', suffix: 'licensed', description: 'Free to use, forever' },
];
---

<section class={cn('section-divider py-16 lg:py-28', className)} aria-labelledby="opensource-heading">
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <div class="mb-12 lg:mb-16" data-animate>
      <div class="mb-6 flex items-center gap-4">
        <img src="/orbiter-logo.png" alt="" class="only-light h-10 w-auto sm:h-12" aria-hidden="true" />
        <img src="/orbiter-logo-dark.png" alt="" class="only-dark h-10 w-auto sm:h-12" aria-hidden="true" />
        <span class="inline-flex items-center rounded-full bg-coral/10 px-3.5 py-1 text-[11px] font-semibold uppercase tracking-[0.2em] text-coral">
          Open Source
        </span>
      </div>
      <h2 id="opensource-heading" class="text-3xl font-semibold leading-[0.95] tracking-tight sm:text-4xl lg:text-5xl">
        Meet <span class="text-coral">Orbiter</span>
      </h2>
      <p class="mt-5 max-w-2xl text-base text-dark/60 sm:text-lg">
        Our open-source, async-first multi-agent framework for Python. Build production-grade AI agents with type-safe tools, swarm orchestration, and modular packages.
      </p>
    </div>

    <!-- Stats row â€” matches Benchmarks pattern -->
    <div class="divide-y divide-dark/[0.06]" data-animate data-delay="1">
      {highlights.map((item) => (
        <div class="flex items-baseline justify-between py-6 first:pt-0 last:pb-0">
          <div>
            <div class="text-sm font-semibold text-dark/70">{item.description}</div>
          </div>
          <div class="flex items-baseline gap-1.5">
            <span class="text-3xl font-bold tracking-tight sm:text-4xl">{item.stat}</span>
            <span class="text-sm font-semibold text-dark/25">{item.suffix}</span>
          </div>
        </div>
      ))}
    </div>

    <!-- CTAs -->
    <div class="mt-10 flex flex-wrap gap-3 sm:gap-4" data-animate data-delay="2">
      <Button href="https://github.com/Midsphere-AI/orbiter-ai" isPrimary target="_blank" rel="noopener noreferrer" class="text-sm py-3">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true"><path d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"/></svg>
        View on GitHub
      </Button>
      <Button href="/orbiter" isBordered class="text-sm py-3">
        Learn more
        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
      </Button>
    </div>
  </div>
</section>
