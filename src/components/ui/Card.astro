---
import { cn } from '../../utils/merge';

interface Props {
  class?: string;
  as?: 'div' | 'article' | 'section';
  [key: string]: any;
}

const { class: className, as: Element = 'div', ...rest } = Astro.props;

const classes = cn(
  'rounded-xl bg-subtle/80 border border-dark/[0.08] p-6 transition-all duration-300 ease-out hover:bg-subtle hover:shadow-md hover:border-dark/[0.12] hover:-translate-y-0.5',
  className,
);
---

<Element class={classes} {...rest}>
  <slot />
</Element>
