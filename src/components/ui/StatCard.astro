---
import { cn } from '../../utils/merge';

interface Props {
  label: string;
  value: string;
  footnote?: string;
  class?: string;
  [key: string]: any;
}

const { label, value, footnote, class: className, ...rest } = Astro.props;

const classes = cn(
  'rounded-xl bg-subtle/80 border border-dark/[0.08] p-6 text-center transition-all duration-300 ease-out hover:bg-subtle hover:shadow-md hover:border-dark/[0.12] hover:-translate-y-0.5',
  className,
);
---

<div class={classes} {...rest}>
  <div class="text-4xl font-semibold md:text-5xl">{value}</div>
  <div class="mt-2 text-sm text-dark/70">{label}</div>
  {footnote && <div class="mt-1 text-xs text-dark/50">{footnote}</div>}
</div>
